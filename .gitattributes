# Auto detect text files and perform LF normalization
* text=auto

# Java source files
*.java text eol=lf
*.xml text eol=lf
*.properties text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# JavaScript/TypeScript/Node.js files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.vue text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Shell scripts (must use LF)
*.sh text eol=lf
mvnw text eol=lf

# Windows scripts (must use CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Markdown and documentation
*.md text eol=lf
*.txt text eol=lf
README text eol=lf
LICENSE text eol=lf

# Binary files
*.jar binary
*.war binary
*.ear binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

